@{
  Layout = "_Layout";
}

@model DealershipManager.Models.Salesman

<h1>Edit salesman: </h1>
<h4>Edit this salesman: @Html.DisplayFor(model => model.Name)</h4>
@*
If you change the dealership the salesman will now be a part of both the new and old
*@
@using (Html.BeginForm())
{
  @Html.Label("Select Dealership")
  @Html.DropDownList("DealershipId")

  @Html.HiddenFor(model => model.SalesmanId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name,
  new {required="required"})

  <input type="submit" value="Edit salesman" class="btn btn-lg btn-dark"/>
}

<p>@Html.ActionLink("Delete this salesman", "Delete", new { id = Model.SalesmanId })</p>
<p>@Html.ActionLink("return to salesmen page", "Index")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>