@{
  Layout = "_Layout";
}

@using DealershipManager.Models
@model List<DealershipManager.Models.Salesman>

<h1>All Salesmans:</h1>

@if(@Model.Count == 0)
{
  <h3>No Salesmen have been added yet.</h3>
}

@foreach(Salesman salesman in Model)
{
  <li>@Html.ActionLink($"{salesman.Name}", "Details", new { id = salesman.SalesmanId})</li>
}

<p>@Html.ActionLink("Add a new salesman", "Create")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>